<h1>New article</h1>

<% #form_for @article, url: {action: 'update', method: 'put'} do |f| %>
<%= form_for :article, url: article_path(@article), method: :put do |f| %>

	<p>
		<%= f.label :author %><br>
		<%= f.text_field :author %>
	</p>
	<p>
		<%= f.label :title %><br>
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :text %><br>
		<%= f.text_area :text %>
	</p>
	<p>
		<%= f.submit %>
	</p>

	<% form_tag(article_path(:id), method: "patch") %>

<% end %>