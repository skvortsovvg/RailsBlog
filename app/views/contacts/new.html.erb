<h1>Contact us</h1>

<%= form_for :contact, url: contacts_path do |f| %>
	
	<% if @contact and @contact.errors.any? %>
		<ul>
			<% @contact.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul> 
	<% end %>
	
	<p>
		<%= f.label :name %><br>
		<%= f.text_field :name %>
	</p>
	<p>
		<%= f.label :email %><br>
		<%= f.text_field :email %>
	</p>
	<p>
		<%= f.label :msg %><br>
		<%= f.text_area :msg %>
	</p>
	<p>
		<%= f.submit 'Сохранить данные' %>
	</p>
<% end %>